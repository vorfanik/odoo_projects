<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record model="ir.ui.view" id="wizard_form_view">
            <field name="name">wizard.form</field>
            <field name="model">projects.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Employees">
                    <group>
                        <field name="project_ids"/>
                        <field name="employe_ids"/>
                    </group>
                    <footer>
                        <button name="add_employees" type="object"
                                string="Add" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="launch_emp_wizard" model="ir.actions.act_window">
            <field name="name">Add Employees</field>
            <field name="res_model">projects.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_projects_project"/>
        </record>

</odoo>